<!-- https://jay23606.github.io/chat-gpt-voice/html/html-editor-Monacohtml -->

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monaco HTML Editor</title>
    <style>
        #editor {
            height: 500px;
            width: 100%;
        }
    </style>
    <script src="https://unpkg.com/monaco-editor@0.26.0/min/vs/loader.js"></script>
    <script>
        require.config({ paths: { 'vs': 'https://unpkg.com/monaco-editor@0.26.0/min/vs' }});
        require(['vs/editor/editor.main'], function() {
            var editor = monaco.editor.create(document.getElementById('editor'), {
                language: 'html',
                theme: 'vs-dark',
                value: '<html>\n<head>\n\t<title>My Website</title>\n</head>\n<body>\n\t<h1>Welcome to my website!</h1>\n\t<p>This is a paragraph.</p>\n</body>\n</html>',
                automaticLayout: true,
                wordWrap: 'on',
                wrappingIndent: 'indent',
                suggest: {
                    completionItems: true,
                    snippets: true,
                    html5: true,
                },
            });
        });
    </script>
</head>
<body>
    <div id="editor"></div>
</body>
</html>
